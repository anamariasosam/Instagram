<% @products.each do |product| %>
  <tr class="list-values" data-expanded="true">
    <td>
      <a href="<%= product.instagram_image %>" data-lightbox="image-1" data-title="<%= product.product_name %>" >
        <img src="<%= product.instagram_image %>" alt="catlog, productos, <%= product.store.name%>" class="list-image">
      </a>
    </td>
    <td class="text-left"><%= product.product_name %></td>
    <td><%= number_to_currency product.price, precision:0 %></td>
    <td><%= product.quantity %></td>
    <td class="text-left"><%= truncate(product.description, length: 90, escape: false) %></td>
    <td>
      <%= link_to edit_product_path(product) do %>
        <i class="list-action fa fa-pencil-square"></i> <span class="hidden-xs">Editar</span>
      <% end %>
    </td>
    <td>
      <%= link_to product, method: :delete, data: { confirm: '¿Estás seguro que deseas eliminarlo?' } do%>
        <i class="list-action fa fa-trash"></i> <span class="hidden-xs">Borrar</span>
      <% end %>
    </td>
  </tr>
<% end %>
